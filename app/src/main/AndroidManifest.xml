<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fbhacks.standbyme">

    <!-- OUR PERMISSIONS -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".DummyHome"
            android:label="@string/title_activity_dummy_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakePhoneCall"
            android:label="@string/title_activity_make_phone_call"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GeoLocation"
            android:label="@string/title_activity_geo_location"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Speech"
            android:label="@string/title_activity_speech"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TxtSpeech"
            android:label="@string/title_activity_txt_speech"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Text"
            android:label="@string/title_activity_text"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Ringtone"
            android:label="@string/title_activity_ringtone"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>